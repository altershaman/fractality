{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "fractality",
	"patterns": [
		{"include": "#comment"},
		{"include": "#keyword"},
		{"include": "#entity"},

		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comment": {
			"name":  "comment.line.fractality",
			"match": "^\\#(.*)|\\s#(.*)$"
		},
		"keyword": {
			"patterns": [
				{"include": "control"},
				{"include": "operator"}
			]
		},
		"control": {
			"name":  "keyword.control.fractality",
			"match": "^([@?%])"
		},
		"operator": {
			"name":  "keyword.control.fractality",
			"match": "\\s{1,}(\\.|:{1,2})"
		},

		"entity": {
			"name":  "entity.name.fractality",
			"match": "^([^\\s\\.#:?@%<>]*)"
		},

		"keywords": {
			"patterns": [{
				"name": "keyword.control.fractality",
				"match": "\\b(if|while|for|return)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.fractality",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.fractality",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.fractality"
}